{
  "manifest_version": 3,
  "name": "Meeting Summarizer PM",
  "version": "0.1.0",
  "description": "Record, transcribe, and summarize meetings from your browser.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "asset/R-48.png"
    }
  },
  "icons": {
    "48": "asset/R-48.png",
    "128": "asset/R-128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html"
}