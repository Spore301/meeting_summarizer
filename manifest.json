{
  "manifest_version": 3,
  "name": "Meeting Summarizer PM",
  "version": "0.1.0",
  "description": "Record, transcribe, and summarize meetings from your browser.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html"
}